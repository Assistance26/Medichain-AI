{
  "name": "insurance-blockchain",
  "version": "1.0.0",
  "description": "Blockchain-based insurance system",
  "main": "truffle-config.js",
  "scripts": {
    "start": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:backend": "nodemon server.js",
    "test": "truffle test",
    "compile": "truffle compile",
    "migrate": "truffle migrate",
    "migrate:reset": "truffle migrate --reset",
    "install-all": "npm install && cd frontend && npm install"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "ipfs-http-client": "^56.0.0",
    "mongoose": "^7.0.0",
    "nodemon": "^3.0.1",
    "truffle": "^5.8.0",
    "web3": "^1.9.0",
    "concurrently": "^8.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
